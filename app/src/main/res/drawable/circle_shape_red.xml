<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <!-- 光晕效果 -->
            <solid android:color="#66ff0000" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
    <item android:right="8dp" android:top="8dp" android:left="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#ff0000"
                android:centerColor="#e50000"
                android:endColor="#b30000"
                android:angle="90"
                android:type="radial"
                android:gradientRadius="20dp" />
        </shape>
    </item>
    <item android:right="12dp" android:top="12dp" android:left="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="#ff8080" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
    <item android:right="16dp" android:top="16dp" android:left="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffcccc"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
