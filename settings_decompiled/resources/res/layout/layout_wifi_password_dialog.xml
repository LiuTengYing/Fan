<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/password_bg" android:layout_width="530dp" android:layout_height="280dp">
    <TextView android:textSize="24sp" android:textColor="@color/white" android:id="@+id/wifi_dialog_name" android:layout_width="match_parent" android:layout_height="60dp" android:paddingStart="50dp"/>
    <TextView android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/set_dialog_password" android:layout_below="@+id/wifi_dialog_name" android:paddingStart="20dp"/>
    <EditText android:textColor="@color/white" android:id="@+id/password_edt" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="75dp" android:layout_marginTop="90dp" android:layout_marginRight="75dp" android:layout_alignParentTop="true" android:inputType="textPassword"/>
    <CheckBox android:textColor="@color/white" android:id="@+id/show_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:layout_marginTop="21dp" android:button="@drawable/checkbox" android:text="@string/set_show_password" android:layout_below="@+id/password_edt"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="80dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="24sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/left_btn" android:layout_width="265dp" android:layout_height="90dp" android:text="@string/set_dialog_confirm"/>
        <TextView android:textSize="24sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/right_btn" android:layout_width="265dp" android:layout_height="90dp" android:text="@string/set_dialog_cancel"/>
    </LinearLayout>
</RelativeLayout>
