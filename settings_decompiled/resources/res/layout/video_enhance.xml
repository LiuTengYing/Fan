<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scroll" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/styled_switch_bar"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/image_view" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="166dp" android:layout_centerVertical="true" android:paddingStart="2dp" android:paddingEnd="2dp"/>
            <TextView android:textAppearance="@android:style/TextAppearance.Holo.Light" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/advanced_title" android:paddingStart="12dp"/>
            <TextView android:textAppearance="@android:style/TextAppearance.Holo.Light" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/application_program" android:paddingStart="12dp"/>
            <View android:background="@color/summary_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_margin="12dp"/>
            <com.android.settings.widget.AdjustListView android:id="@+id/application_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@null"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
