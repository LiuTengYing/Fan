            <Button android:id="@+id/skip_button" android:visibility="gone" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="0x1040876"/>
            <Button android:id="@+id/next_button" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@android:string/permdesc_useBiometric"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
