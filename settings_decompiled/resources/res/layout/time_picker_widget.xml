<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layoutDirection="ltr">
        <NumberPicker android:scrollbarSize="0dp" android:id="@+id/hour" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="70dp" android:layout_height="wrap_content"/>
        <NumberPicker android:scrollbarSize="0dp" android:id="@+id/minute" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="70dp" android:layout_height="wrap_content" android:layout_marginStart="5dp"/>
        <NumberPicker android:id="@+id/seconds" android:focusable="true" android:focusableInTouchMode="true" android:visibility="gone" android:layout_width="70dp" android:layout_height="wrap_content" android:layout_marginStart="5dp"/>
    </LinearLayout>
</RelativeLayout>
